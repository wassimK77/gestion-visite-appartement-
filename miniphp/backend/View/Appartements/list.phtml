<body>
    <div class="container">
        <h1>Appartements</h1>
        <?php if (count($this->appartements) > 0) : ?>
            <ul>
                <?php foreach ($this->appartements as $appartement) : ?>
                    <li>
                        <div>
                            <strong>Adresse :</strong> <?php echo $appartement->RUE; ?><br>
                            <strong>Pays :</strong> <?php echo $appartement->PAYS; ?><br>
                            <strong>Ville :</strong> <?php echo $appartement->VILLE; ?>
                        </div>
                        <a href="<?php echo Util_Route::url("detail", "Appartements", ["id" => (string)$appartement->NUMAPPART]); ?>">
                            <button>Détail</button>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ul>
        <?php else : ?>
            <p>Aucun appartement trouvé.</p>
        <?php endif; ?>
    </div>
</body>
</html>